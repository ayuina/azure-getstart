@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div>
    <table class="table">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(m => Model.Employees[0].EmployeeId)</th>
                <th>@Html.DisplayNameFor(m => Model.Employees[0].Firstname)</th>
                <th>@Html.DisplayNameFor(m => Model.Employees[0].Lastname)</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Employees)
            {
                <tr>
                    <td>@Html.DisplayFor(m => item.EmployeeId)</td>
                    <td>@Html.DisplayFor(m => item.Firstname)</td>
                    <td>@Html.DisplayFor(m => item.Lastname)</td>
                </tr>
            }
        </tbody>
    </table>
</div>
